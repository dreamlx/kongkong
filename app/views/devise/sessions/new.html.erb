<h2><%= t("devise.views.sessions.new.title")%></h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :login, :required => false, :autofocus => true %>
    <%= f.input :password, :required => false %>
    <%= f.input :remember_me, :as => :boolean, :label => t("devise.views.sessions.new.remember_me") if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t("devise.views.sessions.new.submit") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
